{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/out/build/linux/onenet",
            "args": [
                "-p",
                "${PRODUCT_ID}",
                "-s",
                "${PRODUCT_SECRET}",
                "-d",
                "${DEVICE_NAME}",
                "-t",
                "${DEVICE_SECRET}",
                "-a",
                "${DEVICE_LEVEL_AUTH}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "PREP DEBUG LAUNCH",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}